<div class="form-group">
  <%= f.label :name, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.text_field :name, required: true, class: 'form-control' %>
    <%= f.error_message_on :name %>
  </div>
</div>

<div class="form-group">
  <%= f.hidden_field :folder_id %>
</div>

<div class="form-group">
  <%= f.label :attachment, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.file_field :attachment, required: true, class: 'select-file btn btn-default' %>
    <%= f.error_message_on :attachment %>
  </div>
</div>
