<div class="form-group">
  <%= f.label :name, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  </div>
</div>

<div class="form-group">
  <%= f.hidden_field :folder_id, value: f.object.folder_id || @current_folder.try(:id) %>
</div>

<div class="form-group">
  <%= f.label :attachment, class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.file_field :attachment, class: 'form-control' %>
    <%= f.error_message_on :attachment %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-4 col-md-6">
    <%= f.submit class: 'btn btn-success' %>
  </div>
</div>
