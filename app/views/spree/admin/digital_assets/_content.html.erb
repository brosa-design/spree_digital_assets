<div id='folder_index' class='row'>
  <div  class='col-md-12'>
    <div class='row'>
      <div  id='asset_upload_buton' class='col-md-12'>
        <% if @current_folder.present? %>
          <button type='button' class='btn btn-primary pull-right'  id='upload_asset_button' data-toggle='modal' data-target='#upload_asset_modal'><i class='glyphicon glyphicon-cloud-upload'></i>Upload Asset</button>
        <% else %>
          <button type='button' class='btn btn-primary pull-right disabled'  id='upload_asset_button' data-toggle='modal' data-target='#upload_asset_modal' disabled='true'><i class='glyphicon glyphicon-cloud-upload'></i>Upload Asset</button>
        <% end %>
      </div>
    </div>
    <div id='folder_assets' class='row' data-next-url='<%= digital_assets_next_page_path(@digital_assets, @current_folder) %>'>
      <%= render partial: 'spree/admin/shared/digital_asset', collection: @digital_assets  %>
    </div>
  </div>
</div>

<div id='upload_asset_modal' class='modal fade' role='dialog'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>&times;</button>
        <h4 class='modal-title'>Asset Uploader</h4>
      </div>
      <div id='upload_asset_modal_body' class='modal-body upload-assets-modal-body'>
        <ul class="upload-assets-tabs-block">
          <li class="upload-assets-tabs-holder">
            <a href="javascript:" class="upload-assets-tabs-link current" data-tab="tab1">Upload Single Image</a>
          </li>
          <li class="upload-assets-tabs-holder">
            <a href="javascript:" class="upload-assets-tabs-link" data-tab="tab2">Upload Multiple Images</a>
          </li>
        </ul>

        <div class="upload-assets-tab-content">
          <div id="tab1" class="upload-assets-tab-block"><%= render 'upload_asset_form' %></div>
          <div id="tab2" class="upload-assets-tab-block" style="display: none;"><%= render 'upload_multiple_asset_form' %></div>
        </div>
      </div>
    </div>
  </div>
</div>
